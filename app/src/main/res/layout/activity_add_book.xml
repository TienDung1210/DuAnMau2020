<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".Book.AddBookActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_marginTop="9dp"
            android:padding="20dp"
            android:id="@+id/sptheloaisach"
            android:layout_width="240dp"
            android:layout_height="wrap_content"></Spinner>

        <ImageView
            android:onClick="Spntheloai"
            android:src="@drawable/add"
            android:layout_width="50dp"
            android:layout_height="wrap_content"></ImageView>



    </LinearLayout>



    <EditText
        android:hint="Ten Sach"
        android:id="@+id/edttensach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText

        android:layout_marginTop="10dp"
        android:hint="Tac Gia"
        android:id="@+id/edttacgia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText

        android:layout_marginTop="10dp"
        android:hint=" NXB"
        android:id="@+id/edtnxb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:hint=" Gia Bia"
        android:id="@+id/edtgiabia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <EditText

        android:layout_marginTop="10dp"
        android:hint=" So Luong"
        android:id="@+id/edtsoluong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:onClick="addbook"
            android:textColor="#eeeeee"
            android:background="#4ABF4E"
            android:layout_marginLeft="50dp"
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:textColor="#eeeeee"
            android:background="#4ABF4E"
            android:layout_marginLeft="50dp"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>



</LinearLayout>