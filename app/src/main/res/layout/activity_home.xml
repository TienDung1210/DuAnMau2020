<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">


    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:onClick="User"
                android:src="@drawable/user"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="Người Dùng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:onClick="Theloai"
                android:src="@drawable/theloai"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>
            <TextView
                android:layout_marginLeft="20dp"
                android:text="Thể Loại "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:onClick="Book"
                android:src="@drawable/book"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>
            <TextView
                android:layout_marginLeft="25dp"
                android:text="Book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:onClick="HoaDon"
                android:src="@drawable/download"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>
            <TextView
                android:layout_marginLeft="15dp"
                android:text="Hoá Đơn "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:onClick="Sachbanchay"
                android:src="@drawable/topbook"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>
            <TextView
                android:text="Top sách bán chạy "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:onClick="Thongke"
                android:src="@drawable/thongke"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="Thống kê "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>